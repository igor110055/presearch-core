<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

  <LinearLayout android:layout_width="match_parent" android:layout_height="0dip" android:layout_weight="0" android:orientation="vertical">

    <TextView
      android:id="@+id/sheet_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="5dp"
      android:layout_marginStart="15dp"
      android:text="@string/bookmarks_bottom_sheet_title"
      android:textAppearance="@style/TextAppearance.TextMedium.Secondary"/>

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/sheet_item_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
  </LinearLayout>
  <ImageButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ToolbarButton"
    android:layout_width="0dp"
    android:layout_weight="1"
    tools:ignore="ContentDescription"
    android:padding="@dimen/custom_tabs_toolbar_vertical_padding"
    android:scaleType="centerInside"
    android:background="@drawable/down_arrow"/>
</LinearLayout>
