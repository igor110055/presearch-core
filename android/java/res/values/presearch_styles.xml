<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PresearchSwitchTheme">
        <item name="colorControlActivated">#2D8EFF</item>
    </style>

    <style name="PresearchDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="PresearchRewardsSwitchTheme">
        <item name="colorControlActivated">@color/presearch_rewards_theme_color</item>
        <item name="colorSwitchThumbNormal">@color/modern_grey_600</item>
        <item name="android:colorForeground">@color/modern_grey_600</item>
    </style>

    <!-- Buttons for Presearch Sync -->
    <style name="PresearchSyncButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/presearch_sync_btn</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PresearchSyncBottomButton">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PresearchSyncToggleOffButtonLeft">
        <item name="android:textColor">@color/presearch_theme_color</item>
        <item name="android:background">@drawable/presearch_sync_toggle_off_btn_left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PresearchSyncToggleOffButtonRight">
        <item name="android:textColor">@color/presearch_theme_color</item>
        <item name="android:background">@drawable/presearch_sync_toggle_off_btn_right</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PresearchSyncToggleOnButtonRight">
        <item name="android:textColor">@color/white_alpha_65</item>
        <item name="android:background">@drawable/presearch_sync_toggle_on_btn_right</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PresearchSyncToggleOnButtonLeft">
        <item name="android:textColor">@color/white_alpha_65</item>
        <item name="android:background">@drawable/presearch_sync_toggle_on_btn_left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewTabPopupMenuLight" parent="Widget.AppCompat.PopupMenu">
      <item name="android:textColor">@android:color/black</item>
      <item name="android:itemBackground">@android:color/white</item>
    </style>

    <style name="NewTabPopupMenuDark" parent="Widget.AppCompat.PopupMenu">
      <item name="android:textColor">@color/new_tab_menu_text_dark_color</item>
      <item name="android:itemBackground">@color/new_tab_menu_bg_dark_color</item>
    </style>

    <style name="PresearchTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent_activity_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
